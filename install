#!/bin/sh
set -eu

ORG="SkyNextGen"
REPO="kvas-sync"
BRANCH="main"

BASE="/opt/kvas-sync"
TMPROOT="/opt/tmp"
WORK="${TMPROOT}/kvas-sync-install.$$"
ARCHIVE="${TMPROOT}/kvas-sync-${BRANCH}.zip"

need_cmd() { command -v "$1" >/dev/null 2>&1; }
say() { echo "$*" >&2; }

ask() {
  printf "%s: " "$1" >&2
  IFS= read -r ans || true
  printf "%s" "$ans"
}

cleanup() { rm -rf "$WORK" >/dev/null 2>&1 || true; }
trap cleanup EXIT

install_pkgs() {
  for p in "$@"; do
    opkg install "$p" >/dev/null 2>&1 || true
  done
}

ensure_deps() {
  need_cmd opkg || { say "❌ Entware (opkg) не найден. Проверьте, что /opt смонтирован."; exit 1; }

  say "Проверка зависимостей Entware..."
  opkg update >/dev/null 2>&1 || true

  # критично для работы
  install_pkgs curl ca-bundle unzip coreutils-timeout cron vixie-cron cronie

  need_cmd curl    || { say "❌ curl не найден"; exit 1; }
  need_cmd unzip   || { say "❌ unzip не найден"; exit 1; }
  need_cmd timeout || { say "❌ timeout не найден (coreutils-timeout)"; exit 1; }
  need_cmd crontab || { say "❌ crontab не найден (cron/vixie-cron)"; exit 1; }
}

download_and_unpack() {
  mkdir -p "$WORK"

  ARCHIVE_URL="https://github.com/${ORG}/${REPO}/archive/refs/heads/${BRANCH}.zip"

  say "Загрузка архива репозитория: ${ORG}/${REPO}@${BRANCH}"
  curl -fsSLo "$ARCHIVE" "$ARCHIVE_URL"

  say "Распаковка архива..."
  unzip -qo "$ARCHIVE" -d "$WORK"

  KS_PATH="$(find "$WORK" -type f -path '*/payload/bin/kvas-sync.sh' -print -quit)"
  [ -n "$KS_PATH" ] || { say "❌ payload/bin/kvas-sync.sh не найден"; exit 1; }

  PAYLOAD_DIR="$(dirname "$(dirname "$KS_PATH")")"
  say "Найден payload: $PAYLOAD_DIR"
  echo "$PAYLOAD_DIR"
}

deploy_payload() {
  payload="$1"

  say "Развёртывание в $BASE ..."
  mkdir -p "$BASE"
  rm -rf "$BASE/bin" "$BASE/conf"
  cp -R "$payload/bin"  "$BASE/bin"
  cp -R "$payload/conf" "$BASE/conf"

  chmod +x "$BASE/bin/kvas-sync.sh"
  mkdir -p "$BASE/log" "$BASE/state" "$BASE/tmp"

  # sanity-check: должен быть агент
  if ! grep -q "KVAS-SYNC Router Agent" "$BASE/bin/kvas-sync.sh" 2>/dev/null; then
    say "❌ Ошибка: payload/bin/kvas-sync.sh не является агентом."
    exit 1
  fi

  # sanity-check: в агенте не должно быть install-stub
  if grep -q "cat[[:space:]]*>[[:space:]]*/opt/kvas-sync/bin/kvas-sync.sh" "$BASE/bin/kvas-sync.sh" 2>/dev/null; then
    say "❌ Ошибка: в payload/bin/kvas-sync.sh найден install-stub (cat > ...)."
    exit 1
  fi
}

write_configs() {
  echo ""
  echo "Введите данные Telegram"

  BOT_TOKEN="$(ask "Токен бота")"
  CHAT_ID="$(ask "ID чата")"
  ROUTER_NAME="$(ask "Введите имя роутера")"

  [ -n "$BOT_TOKEN" ] || { say "❌ Токен пуст"; exit 1; }
  [ -n "$CHAT_ID" ] || { say "❌ ID чата пуст"; exit 1; }
  [ -n "$ROUTER_NAME" ] || { say "❌ Имя роутера пустое"; exit 1; }

  umask 077
  cat > "$BASE/conf/secrets.conf" <<EOF
BOT_TOKEN="$BOT_TOKEN"
CHAT_ID="$CHAT_ID"
EOF
  chmod 600 "$BASE/conf/secrets.conf"

  cat > "$BASE/conf/device.conf" <<EOF
ROUTER_NAME="$ROUTER_NAME"
IMPORT_CMD="kvas import"
EOF
  chmod 644 "$BASE/conf/device.conf"
}

setup_cron() {
  CRON_LINE="15 3 * * 3 /opt/kvas-sync/bin/kvas-sync.sh >> /opt/kvas-sync/log/cron.log 2>&1"
  say "Настройка cron: каждую среду 03:15 (очистка и запись заново)"
  printf "%s\n" "$CRON_LINE" | crontab -
}

start_cron() {
  say "Запуск cron-демона..."
  if [ -x /opt/etc/init.d/S10cron ]; then
    /opt/etc/init.d/S10cron start >/dev/null 2>&1 || true
  fi
  if ! ps | grep -q '[/]opt/sbin/crond'; then
    [ -x /opt/sbin/crond ] && /opt/sbin/crond >/dev/null 2>&1 || true
  fi
}

test_run() {
  say "Пробный запуск..."

  # сброс lock и логов для понятного теста
  rm -rf "$BASE/state/import.lock" 2>/dev/null || true
  rm -f "$BASE/log/kvas-sync.log" 2>/dev/null || true

  INSTALL_LOG="$BASE/log/install-run.log"
  echo "===== install test run: $(date '+%Y-%m-%d %H:%M:%S') =====" >> "$INSTALL_LOG"

  # ВАЖНО: запуск агента напрямую, без "sh -x"
  "$BASE/bin/kvas-sync.sh" >>"$INSTALL_LOG" 2>&1 || true

  echo "----- tail install-run.log -----"
  tail -n 200 "$INSTALL_LOG" 2>/dev/null || true
  echo "--------------------------------"

  if [ -f "$BASE/log/kvas-sync.log" ]; then
    say "✅ Агент создал kvas-sync.log"
  else
    say "⚠️ Агент не создал kvas-sync.log — смотрите install-run.log"
  fi

  say "Лог пробного запуска: $INSTALL_LOG"
  say "Лог агента: $BASE/log/kvas-sync.log"
}

main() {
  say "Установка kvas-sync в $BASE"
  ensure_deps
  payload="$(download_and_unpack)"
  deploy_payload "$payload"
  write_configs
  setup_cron
  start_cron
  test_run
  say "✅ Установка завершена."
}

main "$@"
